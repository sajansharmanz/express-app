{
    "name": "api-template",
    "version": "1.0.0",
    "description": "A default setup for an express api",
    "main": "index.js",
    "scripts": {
        "start": "env-cmd -f ./environments/prod/.env nodemon --config nodemon.json --files src/index.ts",
        "start:dev": "env-cmd -f ./environments/dev/.env nodemon --config nodemon.json --files src/index.ts",
        "start:test": "env-cmd -f ./environments/test/.env nodemon --config nodemon.json --files src/index.ts",
        "test": "env-cmd -f ./environments/test/.env jest --runInBand",
        "test:coverage": "env-cmd -f ./environments/test/.env jest --runInBand --coverage",
        "prettier": "npx prettier --write .",
        "prettier:check": "npx prettier --check .",
        "eslint": "npx eslint \"src/**\"",
        "prisma:generate": "npx prisma generate",
        "prisma:seed": "env-cmd -f ./environments/prod/.env npx prisma db seed",
        "prisma:seed:dev": "env-cmd -f ./environments/dev/.env npx prisma db seed",
        "prisma:seed:test": "env-cmd -f ./environments/test/.env npx prisma db seed",
        "prisma:migrate": "env-cmd -f ./environments/prod/.env npx prisma migrate dev",
        "prisma:migrate:dev": "env-cmd -f ./environments/dev/.env npx prisma migrate dev",
        "prisma:migrate:test": "env-cmd -f ./environments/test/.env npx prisma migrate dev",
        "prisma:reset": "env-cmd -f ./environments/prod/.env npx prisma migrate reset",
        "prisma:reset:dev": "env-cmd -f ./environments/dev/.env npx prisma migrate reset",
        "prisma:reset:test": "env-cmd -f ./environments/test/.env npx prisma migrate reset",
        "prisma:deploy": "env-cmd -f ./environments/prod/.env npx prisma migrate deploy",
        "prisma:studio:dev": "env-cmd -f ./environments/dev/.env npx prisma studio",
        "prisma:studio:test": "env-cmd -f ./environments/test/.env npx prisma studio"
    },
    "keywords": [
        "api",
        "expressjs",
        "rest",
        "api"
    ],
    "author": "Sajan Sharma - sajansharmanz@gmail.com",
    "license": "ISC",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.0.0",
        "@types/js-yaml": "^4.0.5",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/nodemailer": "^6.4.6",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/validator": "^13.7.6",
        "@typescript-eslint/eslint-plugin": "^5.36.1",
        "@typescript-eslint/parser": "^5.36.1",
        "env-cmd": "^10.1.0",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^28.1.3",
        "jest-mock-extended": "^3.0.1",
        "nodemon": "^2.0.19",
        "prettier": "2.7.1",
        "prettier-plugin-prisma": "^4.2.0",
        "prisma": "^4.6.1",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.2"
    },
    "dependencies": {
        "@prisma/client": "^4.6.1",
        "axios": "^1.1.2",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "date-fns": "^2.29.3",
        "express": "^4.18.1",
        "express-rate-limit": "^6.5.2",
        "helmet": "^6.0.0",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.8.0",
        "rotating-file-stream": "^3.0.4",
        "socket.io": "^4.5.3",
        "swagger-ui-express": "^4.5.0",
        "validator": "^13.7.0",
        "winston": "^3.8.1",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "prisma": {
        "schema": "./src/models/schema.prisma",
        "seed": "ts-node ./src/models/seed.ts"
    }
}
